<div class="block mt-5 mb-5 p-6 max-w-sm bg-white rounded-lg border border-gray-200 shadow-md hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
  <div class="flex items-center space-x-4">
    <div class="flex-shrink-0">
      <%= render(Accounts::AvatarComponent.new(account: @tweet.account)) %>
    </div>
    <div class="flex-1 min-w-0">
      <p class="text-sm  font-bold text-gray-700">
        <%= @tweet.author %> - 
        <%= tag.span(time_ago_in_words(@tweet.created_at), class: 'font-normal') %>
      </p>
      <p class="font-normal text-gray-700 dark:text-gray-400">
        <%= @tweet.content %>
      </p>
    </div>
  </div>
</div>

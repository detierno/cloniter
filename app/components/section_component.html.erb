<li class="px-5">
  <div class="flex flex-row items-center h-8">
    <div class="text-sm font-light tracking-wide text-gray-500">
      <%= @name %>
    </div>
  </div>
</li>

<% @links.each do |link| %>
  <%= render NavComponent::LinkComponent.new(**link) %>
<% end %>

<% @buttons.each do |button| %>
  <%= render NavComponent::ButtonComponent.new(**button) %>
<% end %>

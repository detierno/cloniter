<h1 class="text-3xl font-bold underline mb-5">
  Register now for Cloniter
</h1>

<%= form_with model: @user, url: sign_up_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <%= exceptional_messages @user.name %>
  </p>

  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
    <%= exceptional_messages @user.username %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
    <%= error_messages @user, :password %>
  </p>

  <p>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
    <%= error_messages @user, :password_confirmation %>
  </p>

  <p class="mt-5">
    <%= f.submit 'Sign in', class: 'btn-primary' %>
  </p>
<% end %>
